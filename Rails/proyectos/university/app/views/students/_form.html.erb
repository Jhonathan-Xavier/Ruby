<%= render 'shared/errors', obj: @student %>

<div class="container">
  <div class="row center sign-up-form">
    <div class="col s12 m12 l12">
      <div class="card-panel">

        <!--Titulo-->
        <div class="row">
          <div class="col s12">
            <h3 class="center-align"><%= @student.new_record? ? "Registrar" : "Editar Perfil" %></h3>
          </div>
        </div>

        <!--Formulario-->
        <div class="row">
          <%= form_for(@student, html: {class: "col s12"}) do |f| %>

            <!--Nombre-->
            <div class="row">
              <div class="input-field col s12 ">
                <%= f.text_field :name, placeholder: "Nombre", autofocus:true %>
              </div>
            </div>

            <!--Email-->
            <div class="row">
              <div class="input-field col s12">
                <%= f.text_field :email, placeholder: "E-mail", autofocus:true %>
              </div>
            </div>

            <!--Password-->
            <div class="row">
              <div class="input-field col s12">
                <%= f.password_field :password, placeholder: "Contraseña", autofocus:true %>
              </div>
            </div>

            <!--ConfirmacionPassword-->
            <div class="row">
              <div class="input-field col s12">
                <%= f.password_field :password_confirmation, placeholder: "Comprueba tu contraseña", autofocus:true %>
              </div>
            </div>


            <!--Boton-->
            <div class="row">
              <div class="input-field col s12">
                <%= f.button(@student.new_record? ? "Registrar" : "Editar", class: "btn orange waves-effect waves-light right")%>
              </div>
            </div>
          <% end %>
        </div>

      </div>
    </div>
  </div>
</div>

