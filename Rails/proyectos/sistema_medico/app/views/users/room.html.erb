<h1>Sala de espera :) </h1>
<br>
<br>

  <%= link_to 'Registrar nuevo paciente', new_patient_path, class: "btn btn-primary" %>
  <%= link_to 'Estadisticas', stadistic_path, class: "btn btn-danger" %>

<br>
<br>
<h5>Lista de Pacientes</h5>

<table class="table table-striped">
  <thead class="thead-dark">
  <tr>
    <th>Nombre</th>
    <th>Edad</th>
    <th>Peso</th>
    <th>Sangre</th>
    <th>Alergia</th>
    <th colspan="3">Accion</th>
  </tr>
  </thead>

  <tbody>
  <% @patient.each do |pat| %>
    <tr>
      <td><%= pat.name %></td>
      <td><%= pat.age %></td>
      <td><%= pat.height %></td>
      <td><%= pat.tblood %></td>
      <td><%= pat.allergy %></td>
      <td>
        <%= link_to "Detalle", patient_path(pat.id) %>
        <%= link_to "Editar", edit_patient_path(pat) %>
        <%= link_to "Borrar", patient_path(pat), method: :delete, data: { confirm: "Estas seguro?"}  %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>

<h6><%= link_to "volver", root_path, class: "btn btn-warning"  %></h6>

