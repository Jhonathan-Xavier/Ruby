  <div class="row justify-content-start">
    <div class="col-1">
      <%= elemento.label :Doctor %>
    </div>
    <div class="col-1">
      <%= elemento.hidden_field :user_id, value: current_user.id  %>
    </div>
  </div>

  <div class="row justify-content-start">
    <div class="col-1">
      <%= elemento.label :CÃ©dula %>
