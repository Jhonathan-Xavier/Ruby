      <%= elemento.text_field :ci %>
    </div>
  </div>

  <div class="row justify-content-start">
    <div class="col-1">
      <%= elemento.label :Nombre %>
    </div>
    <div class="col-1">
      <%= elemento.text_field :name %>
    </div>
  </div>

  <div class="row justify-content-start">
    <div class="col-1">
      <%= elemento.label :Edad %>
    </div>
    <div class="col-1">
      <%= elemento.text_field :age %>
    </div>
  </div>

  <div class="row justify-content-start">
    <div class="col-1">
