<!--Crear es muy similar a editar, me traigo lo mismo-->
<h1>Edita un paciente</h1>

<% if @patient.errors.any? %>
  <h4>Hubo errores con la editación, revisa que...</h4>
  <ul>
    <% @patient.errors.full_messages.each do |errores| %>
      <li><%= errores %></li>
    <% end %>
  </ul>
<% end %>


<%= form_for(@patient, html: {class:"col-s12" })  do |elemento| %>


  <div class="row justify-content-start">
    <div class="col-1">
      <%= elemento.label :Cédula %>
    </div>
    <div class="col-1">
      <%= elemento.text_field :ci %>
    </div>
  </div>

  <div class="row justify-content-start">
    <div class="col-1">
      <%= elemento.label :Nombre %>
    </div>
    <div class="col-1">
      <%= elemento.text_field :name %>
    </div>
  </div>

  <div class="row justify-content-start">
    <div class="col-1">
      <%= elemento.label :Edad %>
    </div>
    <div class="col-1">
      <%= elemento.text_field :age %>
    </div>
  </div>

  <div class="row justify-content-start">
    <div class="col-1">
      <%= elemento.label :Peso %>
    </div>
    <div class="col-1">
      <%= elemento.text_field :height %>
    </div>
  </div>

  <div class="row justify-content-start">
    <div class="col-1">
      <%= elemento.label :TipoSangre %>
    </div>
    <div class="col-1">
      <%= elemento.text_field :tblood %>
    </div>
  </div>

  <div class="row justify-content-start">
    <div class="col-1">
      <%= elemento.label :Alergia %>
    </div>
    <div class="col-1">
      <%= elemento.text_field :allergy %>
    </div>
  </div>

  <br>
  <%= elemento.submit "Guardar", class: "btn btn-warning"   %>
  <%= link_to "Cancelar", room_path, class: "btn btn-danger" %>

<% end %>



